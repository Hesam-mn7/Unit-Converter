<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <TableLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <Button
                android:id="@+id/btn1"
                android:layout_height="300dp"
                android:background="#327335"
                android:text="Distance"
                android:textColor="#fff"
                android:textSize="30dp"
                android:paddingTop="200dp"
                android:textStyle="bold"
                android:foreground="?attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_height="300dp"
                android:background="#D8A50E"
                android:text="Weight"
                android:paddingTop="200dp"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:foreground="?attr/selectableItemBackground"
                />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn3"
                android:layout_height="300dp"
                android:background="#FB2616"
                android:text="Temperature"
                android:textColor="#fff"
                android:textSize="25dp"
                android:paddingTop="200dp"
                android:textStyle="bold"
                android:foreground="?attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/btn4"
                android:layout_height="300dp"
                android:background="#1D37C5"
                android:text="World Clock"
                android:textColor="#fff"
                android:textSize="25dp"
                android:paddingTop="200dp"
                android:textStyle="bold"
                android:foreground="?attr/selectableItemBackground"
                />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/distance"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tl"
        app:layout_constraintTop_toTopOf="@id/tl"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/weight3"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@id/tl"
        app:layout_constraintTop_toTopOf="@id/tl"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/temperature"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="@id/tl"
        app:layout_constraintBottom_toBottomOf="@id/tl"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/clock"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintRight_toRightOf="@id/tl"
        app:layout_constraintBottom_toBottomOf="@id/tl"/>

</androidx.constraintlayout.widget.ConstraintLayout>